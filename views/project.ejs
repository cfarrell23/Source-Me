<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title><%= projectName %> | <%= roleName %> | Source Me</title>
  <!-- Bootstrap core CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <!-- Homepage Stylesheet -->
  <link rel="stylesheet" href="css/styles.css">
</head>

<body>
  <!-- Navigation Bar -->
  <nav class="navbar navbar-expand-lg navbar-light fixed-top coloured-section border-bottom">

    <a class="navbar-brand"><span class="very-bold-word">Source</span><em> Me</em></a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/all-roles">Return to All Projects</a>
        </li>
      </ul>
    </div>

  </nav>

  <section id="title" class="coloured-section"></section>

  <!-- Project View -->
  <section id="this-project" class="white-section">

    <div class="container-fluid">
      <h1 class="section-title"><%= roleName %></h1>
      <hr>

      <div class="row">

        <div class="col-md-6 project-info">
          <h3 class="section-subtitle">Project Name / Client</h3>
          <p><%= projectName %> - <%= client %></p>
          <h3 class="section-subtitle">Grade</h3>
          <p><%= grade %></p>
          <h3 class="section-subtitle">Description</h3>
          <p><%= roleDescription %></p>
          <h3 class="section-subtitle">Start Date / End Date</h3>
          <p><%= startDate %> - <%= endDate %></p>
        </div>

        <div class="col-md-6 location">
          <h3 class="section-subtitle">Location</h3>
          <p><%= location %></p>
          <h3 class="section-subtitle">Resource Manager Name</h3>
          <p><%= resourceManagerName %></p>
          <h3 class="section-subtitle">Resource Manager Email</h3>
          <a class="btn btn-link contact-button" href="mailto:<%= resourceManagerEmail %>"><%= resourceManagerEmail %></a>
        </div>

      </div>

    </div>

  </section>

  <!-- Bootstrap Scripts   -->
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

</body>
</html>
